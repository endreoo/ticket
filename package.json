{
  "name": "hotel-ticket-system",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "server:build": "tsc --project server/tsconfig.json",
    "server:dev": "nodemon --watch 'server/**/*.ts' --exec 'ts-node' server/index.ts",
    "start": "concurrently \"npm run server:dev\" \"npm run dev\""
  },
  "dependencies": {
    "@ant-design/icons": "^5.5.2",
    "@heroicons/react": "^2.2.0",
    "antd": "^5.22.7",
    "axios": "^1.7.9",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "date-fns": "^3.3.1",
    "dompurify": "^3.2.3",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "imap": "^0.8.19",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.330.0",
    "mailparser": "^3.7.2",
    "mysql2": "^3.9.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "react-router-dom": "^6.22.1"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.15",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",

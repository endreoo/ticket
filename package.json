    "@types/lodash": "^4.17.13",
    "@types/mailparser": "^3.4.5",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.9",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "terser": "^5.37.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "vite": "^5.1.0"
  }
